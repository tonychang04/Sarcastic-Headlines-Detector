# Filename: detector.kv
<MyGrid>:
    input: input
    GridLayout:
        cols:1
        size: root.width, root.height

        Label:
            id: Results
            font_name: 'STHeiti Medium.ttc'
            text: "Result: "
            font_size: 50

        GridLayout:
            cols: 2
            size: root.width, root.height

            Label:
                id: inputName
                font_name: 'STHeiti Medium.ttc'
                text: "News HeadLine Title: "
                font_size: 50
            TextInput:
                id: input
                multiline: True
                font_size: 40



        Button:
            id: predictor
            text: "Predict(Press this to predict)"
            on_press: root.predict()
            font_size: 50
